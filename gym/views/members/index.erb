


<h1></h1>
<h1>Members</h1>

<form action="/members/new" method="get">
  <input type="submit" value="ADD NEW MEMBER">
</form>
<table>
  <tr>

    <th>First Name</th>
    <th>Last Name</th>
    <th>Premium</th>
    <th>Fitness Level</th>
    <th>View</th>

  </tr>
    <% for member in @members%>
    <tr>

      <td><%= member.f_name %></td>
      <td><%= member.l_name %></td>
      <%  premium = 'No'          %>
      <% if member.premium == 't' %>
      <%   premium = 'Yes'        %>
      <%end  %>
      <td> <%= premium %></td>
          <%level = "Low" %>
          <%if member.fitness_level == 2 %>
          <%level = "Medium" %>
          <%end %>
          <%if member.fitness_level == 3 %>
          <%level = "High" %>
          <%end %>
      <td><%= level %></td>
      <td>
      <form action="/members/<%= member.id %>" method="get">
        <input type="submit" value="Select">
      </form>
      </td>

    </tr>
  <% end %>
</table>
